{% extends 'base.html.twig'%}
{% block body %}
    <div class="container projet">
        <!------>
        <div class="row">
            {% set numb=0 %}
            {% for project in projects %}

            <!---card block vith short description--->
            <div class="col s12 m6 l4">
                <p class="brown-text text-lighten-5">{{ project.date.date|date("Y") }}</p>
                <div class="card brown lighten-5">
                    <div class="card-image">
                        <img src="{{ project.img }}">
                        <a title="Description du projet" href="#modal{{ numb }}" class="btn-floating halfway-fab waves-effect waves-light orange"><i class="material-icons">add</i></a>
                        {% if project.code|length > 3 %}
                            <a  title="Voir le code source" class="btn-floating halfway-fab waves-effect waves-light left blue-grey darken-3"><i class="material-icons">code</i></a>
                        {% endif %}
                    </div>
                    <div class="card-content">
                        <p>{{ project.shortDescription }}</p>
                    </div>
                </div>
            </div>
           <!--- modal bloc--->
            <div id="modal{{ numb }}" class="modal">
                <div class="modal-content">
                    <h4>{{ project.title }}</h4>
                    <p>{{ project.description }}</p>
                    <div class="row">
                        <img class="materialboxed col m4" width="100" src="{{ asset('pictures/bkg.png') }}">
                        <img class="materialboxed col m4" width="100" src="{{ asset('pictures/bkg.png') }}">
                        <img class="materialboxed col m4"  src="{{ asset('pictures/bkg.png') }}">
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Fermer</a>
                </div>
            </div>
            {% set numb = numb+1 %}
            {% endfor %}
        </div>
        <!------>
    </div>
{% endblock %}