{% extends 'base.html.twig'%}
{% block body %}
    <div class="container projet">
        <!------>
        <div class="row">
            {% set numb=0 %}
            {% for project in projects %}

            <!---card block with short description--->
            <div class="col s12 m6 l4">
                <div class="card brown lighten-5">
                    <div class="card-image">
                        <img src="{{ project.img }}">
                        <a title="Description du projet" href="#modal{{ numb }}" class="btn-floating halfway-fab waves-effect waves-light orange"><i class="material-icons">add</i></a>
                        {% if project.code|length > 3 %}
                            <a href="{{ project.code }}" target="_blank" title="Voir le code source" class="btn-floating halfway-fab waves-effect waves-light left blue-grey darken-3">
                                <img src="{{ asset('pictures/github3.png') }}" alt="">
                            </a>
                        {% endif %}
                    </div>
                    <div class="card-content">
                        <p class="blue-grey-text text-darken-3 date">{{ project.date.date|date("Y") }}</p>

                    </div>
                </div>
            </div>
           <!--- modal bloc--->
            <div id="modal{{ numb }}" class="modal">
                <div class="modal-content">
                    <h4>{{ project.title }}</h4>
                    <p>{{ project.description }}</p>
                    <p>{{ project.shortDescription }}</p>
                    <p>Captures d'Ã©cran</p>
                    <div class="row screenshot-bloc">
                        <img class="materialboxed col t1" width="100%" src="{{ project.img1 }}">
                        <img class="materialboxed col t2" width="100%" src="{{ project.img2 }}">
                        <img class="materialboxed col t3" width="100%" src="{{ project.img3 }}">
                    </div>
                </div>
                <div class="modal-footer brown lighten-5">
                    <a href="#!" class=" modal-action waves-effect waves-light btn-flat orange modal-close whote-text">Fermer</a>
                    {% if project.code|length > 3 %}
                        <a href="{{ project.code }}" target="_blank" class=" modal-action waves-effect waves-light blue-grey darken-3 btn-flat left white-text">Code source</a>
                    {% endif %}
                </div>
            </div>
            {% set numb = numb+1 %}
            {% endfor %}
        </div>
        <!------>
    </div>
{% endblock %}