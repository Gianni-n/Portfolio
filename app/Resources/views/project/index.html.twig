{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projects list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Date</th>
                <th>Shortdescription</th>
                <th>Description</th>
                <th>Code</th>
                <th>Img</th>
                <th>Img1</th>
                <th>Img2</th>
                <th>Img3</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.id }}</a></td>
                <td>{{ project.title }}</td>
                <td>{% if project.date %}{{ project.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ project.shortDescription }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.code }}</td>
                <td>{{ project.img }}</td>
                <td>{{ project.img1 }}</td>
                <td>{{ project.img2 }}</td>
                <td>{{ project.img3 }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('project_show', { 'id': project.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('project_edit', { 'id': project.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('project_new') }}">Create a new project</a>
        </li>
    </ul>
{% endblock %}
